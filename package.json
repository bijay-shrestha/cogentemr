{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage",
    "storybook": "yarn workspace @cogent/storybook start",
    "build-storybook": "cd packages/storybook && build-storybook",
    "clean": "lerna exec -- rimraf dist && lerna exec -- rimraf build && lerna exec -- rimraf coverage && lerna clean --yes && rimraf node_modules && yarn",
    "unit": "jest",
    "admin": "yarn workspace @cogent/admin start",
    "build:all": "concurrently --kill-others-on-fail \"yarn workspace @cogent/admin build\" \"yarn workspace @cogent/pharmacy build\"",
    "build:admin": "yarn workspace @cogent/admin build",
    "format": "prettier-eslint —eslint-config-path ./.eslintrc.js --write '**/*.js'",
    "lint": "eslint . —ext .js"
  },
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/ui-components",
      "packages/ui-elements",
      "packages/storybook"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-regenerator": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/runtime": "^7.5.5",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "babel-eslint": "10.0.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.9.0",
    "jest-haste-map": "^24.8.1",
    "jest-prop-type-error": "^1.1.0",
    "jest-resolve": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.10.7",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "babel-jest": "^24.9.0",
    "concurrently": "^5.0.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "jest-config": "latest",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "react-test-renderer": "^16.12.0"
  },
  "version": "1.0.0",
  "main": "index.js",
  "author": "Bijay Shrestha",
  "license": "MIT",
  "production": true,
  "development": true,
  "package-entry": "main:src",
  "resolutions": {
    "jest": "^24.8.0",
    "babel-jest": "^24.9.0",
    "babel-core": "^6.26.3"
  }
}
